---
// Importa React para diagnóstico (no estrictamente necesario, pero se suele declarar)
import React from "react";
// Importa tu componente ProductCards (que en realidad está en card.jsx)
import ProductCards from "./react/card.jsx";
---
<section id="productos" class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="font-heading text-3xl text-[#8D1111] text-center mb-8">
      Productos
    </h2>
    <!-- 
      Aquí indicamos que Astro debe cargar e hidratar ProductCards 
      en el cliente (usaremos client:load).
    -->
    <ProductCards client:load />
  </div>
</section>
